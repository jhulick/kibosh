#!/usr/bin/env ruby

require 'rubygems'
require 'thin'

ru = File.expand_path( File.join( File.dirname( File.expand_path(__FILE__) ),
                                   "..",
                                   "lib",
                                   "kabosh",
                                   "kabosh.ru" ) )

Thin::Runner.new(["-p", "5280", "-R", ru, "start"]).run!
